<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<RootNamespace>EventStore.Connectors.Contracts</RootNamespace>
		<IncludeHttpRuleProtos>true</IncludeHttpRuleProtos>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
	</PropertyGroup>

	<ItemGroup>
        <PackageReference Include="Microsoft.AspNetCore.Grpc.JsonTranscoding" Version="8.0.6" />
        <PackageReference Include="Grpc.Tools" Version="2.64.0" PrivateAssets="All" />
    </ItemGroup>

	<ItemGroup>
		<Protobuf
				ProtoRoot="Contracts/protos"
				Include="Contracts/protos/protocol.proto"
				Link="Contracts\protos\%(RecursiveDir)/%(FileName)%(Extension)"
				GrpcServices="None"
		/>

		<Protobuf
				ProtoRoot="Contracts/protos"
				Include="Contracts/protos/controlplane/**/*.proto"
				Link="Contracts\protos\controlplane\%(RecursiveDir)/%(FileName)%(Extension)"
				GrpcServices="Server"
		/>

		<Protobuf
				ProtoRoot="Contracts/protos"
				Include="Contracts/protos/managementplane/**/*.proto"
				Link="Contracts\protos\managementplane\%(RecursiveDir)/%(FileName)%(Extension)"
				GrpcServices="Server"
		/>
	</ItemGroup>
</Project>